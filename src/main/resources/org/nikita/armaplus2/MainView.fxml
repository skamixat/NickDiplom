<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="org.nikita.armaplus2.Controller" alignment="TOP_CENTER">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <HBox spacing="10">
        <ComboBox fx:id="typeBox">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Доход" />
                    <String fx:value="Расход" />
                </FXCollections>
            </items>
        </ComboBox>
        <TextField fx:id="amountField" promptText="Сумма" />
        <TextField fx:id="dateField" promptText="Дата (YYYY-MM-DD)" />
        <TextField fx:id="descriptionField" promptText="Описание" />
        <Button text="Добавить" onAction="#addOperation" />
    </HBox>

    <TableView fx:id="table">
        <columns>
            <TableColumn fx:id="colType" text="Тип"/>
            <TableColumn fx:id="colAmount" text="Сумма"/>
            <TableColumn fx:id="colDate" text="Дата"/>
            <TableColumn fx:id="colDesc" text="Описание"/>
        </columns>
    </TableView>
</VBox>
