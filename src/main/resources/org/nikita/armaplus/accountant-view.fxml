<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nikita.armaplus.controllers.AccountantController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <TabPane tabClosingPolicy="UNAVAILABLE">
        <Tab text="Сотрудники">
            <VBox spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <TableView fx:id="employeesTable" prefHeight="300.0" prefWidth="580.0">
                    <columns>
                        <TableColumn fx:id="employeeIdColumn" prefWidth="50.0" text="ID"/>
                        <TableColumn fx:id="firstNameColumn" prefWidth="100.0" text="Имя"/>
                        <TableColumn fx:id="lastNameColumn" prefWidth="100.0" text="Фамилия"/>
                        <TableColumn fx:id="phoneColumn" prefWidth="120.0" text="Телефон"/>
                        <TableColumn fx:id="positionColumn" prefWidth="120.0" text="Должность"/>
                        <TableColumn fx:id="hireDateColumn" prefWidth="90.0" text="Дата найма"/>
                    </columns>
                </TableView>
                <HBox spacing="10.0">
                    <Button fx:id="addEmployeeButton" onAction="#handleAddEmployee" text="Добавить"/>
                    <Button fx:id="deleteEmployeeButton" onAction="#handleDeleteEmployee" text="Удалить"/>
                </HBox>
            </VBox>
        </Tab>
        <Tab text="Зарплаты">
            <VBox spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <TableView fx:id="salariesTable" prefHeight="300.0" prefWidth="580.0">
                    <columns>
                        <TableColumn fx:id="salaryIdColumn" prefWidth="50.0" text="ID"/>
                        <TableColumn fx:id="employeeLastNameSalaryColumn" prefWidth="150.0" text="Фамилия"/>
                        <TableColumn fx:id="amountSalaryColumn" prefWidth="100.0" text="Сумма"/>
                        <TableColumn fx:id="paymentDateColumn" prefWidth="120.0" text="Дата выплаты"/>
                        <TableColumn fx:id="expenseTypeSalaryColumn" prefWidth="160.0" text="Тип расхода"/>
                    </columns>
                </TableView>
                <Button fx:id="addSalaryButton" onAction="#handleAddSalary" text="Выдать зарплату"/>
            </VBox>
        </Tab>
    </TabPane>
    <Button fx:id="backButton" onAction="#handleBackButton" text="Назад"/>
</VBox>